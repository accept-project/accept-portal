<script type='text/javascript'>

    $(document).ready(function () {

        if ($("#contactable").length > 0) 
        {  
        
            //alert(@Html.Raw(Json.Encode(User.Identity.Name)));
                                             
            $(function () { $('#contactable').contactable({subject:@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackSubjectLabel)), emailValue: @Html.Raw(Json.Encode(User.Identity.Name)), disclaimer: @Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackText)), name: @Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackNameLabel)), email:'Email',submit:@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackSubmitButtonMessage)), message:@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackMessageLabel)) }); });
               
             setTimeout(function(){    
               
            //alert('@Url.Content("~/Admin/UserFeedback/")');  
                            
            $("#feedback_contactable").click(function(){
      
                if($("#feedbackName_contactable").val().length == 0 || $("#subject_contactable").val().length == 0 || $("#feedbackMessage_contactable").val().length == 0)
                {
                    alert(@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackMandatoryFieldsMessage)))

                }
                else
                {
                    $.ajax({
                    url: '@Url.Content("~/en-Us/Admin/UserFeedback/")',
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html',
                    data: {              
                    user: $('#feedbackName_contactable').val().toString(),
                    email: $('#feedbackEmail_contactable').val().toString(),
                    message:$('#feedbackMessage_contactable').val().toString(),
                    link: window.location.toString(),
                    subject:$('#subject_contactable').val().toString() 
                    }}).success(function(result) {
                    debugger;
                    if(result.toString() == 'True')
                        alert(@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackMessageSent)));
                    else
                       alert(@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackMessageNotSent)));
                
                    $("#contactable #contactable_inner").trigger('click');
                    $('#feedbackName_contactable').val("");
                    $('#subject_contactable').val("");
                    $('#feedbackMessage_contactable').val("");

                    }).error(function(xhr, status) {
                     debugger;
                     alert(@Html.Raw(Json.Encode(AcceptPortal.Resources.Global.FeedbackMessageNotSent)));
                       $("#contactable #contactable_inner").trigger('click');

                           $('#feedbackName_contactable').val("");
                    $('#subject_contactable').val("");
                    $('#feedbackMessage_contactable').val("");                
                });

                }
                                    
            });

            },2000);

        
        }

    });

    
</script>
