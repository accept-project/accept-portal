@model AcceptPortal.Models.Evaluation.EvaluationQuestionItem

@{
    ViewBag.Title = "Edit Question";
}

<h2>Delete Question</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <table border="0" >
    <tr>
    <td><a href="@Url.Action("Project", "Evaluation", new { Id = ViewData["ProjectID"] })">Project</a></td>
    <td><a href="@Url.Action("Questions", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationQuestions</a></td>
    <td><a href="@Url.Action("Metrics", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationMetrics</a></td>
 @*   <td><a href="@Url.Action("ViewEvaluationData", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationViewData</a></td>*@
    </tr>
    </table>
    <br />



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <table border="1">
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationLanguage:</b></td>
        <td width="200">
            @Html.DropDownListFor(m => m.Language.ID, (SelectList)ViewData["Languages"])
        </td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationQuestion:</b></td>
        <td width="200">
            @Html.EditorFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
        </td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationAction:</b></td>
        <td width="200">
            @Html.EditorFor(model => model.Action)
            @Html.ValidationMessageFor(model => model.Action)
        </td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationConfirmation:</b></td>
        <td width="200">
            @Html.EditorFor(model => model.Confirmation)
            @Html.ValidationMessageFor(model => model.Confirmation)
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="@AcceptPortal.Resources.Global.EvaluationUpdate" /> | @Html.ActionLink(AcceptPortal.Resources.Global.EvaluationCancel, "Questions", new { id = ViewData["ProjectID"] })
        </td>
    </tr>
    
    </table>
    
}
