@model AcceptPortal.Models.Evaluation.EvaluationQuestionItem

@{
    ViewBag.Title = @AcceptPortal.Resources.Global.EvaluationDeleteQuestion;
}

<h2>@AcceptPortal.Resources.Global.EvaluationDeleteQuestion</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <table border="0">
    <tr>
    <td><a href="@Url.Action("Project", "Evaluation", new { Id = ViewData["ProjectID"] })">Project</a></td>
    <td><a href="@Url.Action("Questions", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationQuestions</a></td>
    <td><a href="@Url.Action("Metrics", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationMetrics</a></td>
   @* <td><a href="@Url.Action("ViewEvaluationData", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationViewData</a></td>*@

    </tr>
    </table>
    <br />

    <h3>@AcceptPortal.Resources.Global.EvaluationDeleteMessageAll</h3>

    <table border="1">
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationID:</b></td>
        <td width="200">@Model.ID</td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationLanguage:</b></td>
        <td width="200">@Model.Language.Name</td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationQuestion:</b></td>
        <td width="200">@Model.Question</td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationAction:</b></td>
        <td width="200">@Model.Action</td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationConfirmation:</b></td>
        <td width="200">@Model.Confirmation</td>
    </tr>
    <tr>
        <td colspan="2">
        @using (Html.BeginForm())
        {
            <input type="submit" value="@AcceptPortal.Resources.Global.EvaluationConfirm" /> <text>|</text> @Html.ActionLink(AcceptPortal.Resources.Global.EvaluationCancel, "Questions", new { id = ViewData["ProjectID"] })
        }
        </td>
    </tr>
    
    </table>


