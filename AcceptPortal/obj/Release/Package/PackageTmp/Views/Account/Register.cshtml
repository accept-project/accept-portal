@model AcceptPortal.Models.RegisterModel

@{
    ViewBag.Title = @AcceptPortal.Resources.Global.Account_Register_CreateNewAccountLabel;
    Layout = "~/Views/Shared/_PortalLoginLayout.cshtml";
}

@section scripts{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    }

<section>

@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
{
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, @AcceptPortal.Resources.Global.Account_PasswordRecovery_ValidationSummary)
   

    <h2 class="form-signin-heading"><img alt="ACCEPT" src="@Url.Content("~/Content/images/accept_globe_transparent.png")" /></h2>   
        <input for="UserName" type="text" name="UserName" class="input-block-level" placeholder="@AcceptPortal.Resources.Global.Email" value="@(ViewBag.UserName != null ? ViewBag.UserName : "")">                                     
         @Html.ValidationMessageFor(m => m.UserName)
        <input for="Password" type="password" name="Password" class="input-block-level" placeholder="@AcceptPortal.Resources.Global.Password">                                     
         @Html.ValidationMessageFor(m => m.Password)
        <input for="ConfirmPassword" type="password" name="ConfirmPassword" class="input-block-level" placeholder="@AcceptPortal.Resources.Global.ConfirmPassword">                                     
         @Html.ValidationMessageFor(m => m.ConfirmPassword)
    
                          
    <button class="btn btn-large btn-block btn-primary" type="submit" >@AcceptPortal.Resources.Global.Account_Register_RegisterButton</button>       
    <button onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-large btn-block" type="button" >@AcceptPortal.Resources.Global.BackToLoginPage</button>
    
    
    <div>
        <h4 style="text-align:center;">@AcceptPortal.Resources.Global.TermsAndConditionsLabel</h4>
        <span style="text-align:justify;color:gray;font-size:11px;">@Html.Raw(string.Format(@AcceptPortal.Resources.Global.TermsAndConditionsMessage, "href=\""+@Url.Action("Terms", "Documentation")+"\"", "href=\""+@Url.Action("Privacy", "Documentation")+"\""))</span><br />
    </div>
    @*<div style="margin-top:15px;">
        <span>For more information check:</span><br />
        <span><a href="@Url.Action("Terms", "Documentation")" target="_blank">@AcceptPortal.Resources.Global.TermsLabel</a></span><br />
        <span><a href="@Url.Action("Privacy", "Documentation")" target="_blank">@AcceptPortal.Resources.Global.PrivacyLabel</a></span>
    </div>*@
        
}
    
</section>








