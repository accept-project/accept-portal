@model AcceptPortal.Models.Evaluation.EvaluationQuestionItemAnswer

@{
    ViewBag.Title = "Edit Question Answer";
}

<h2>Edit Question Answer</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <table border="0">
    <tr>
    <td><a href="@Url.Action("Project", "Evaluation", new { Id = ViewData["ProjectID"] })">Project</a></td>
    <td><a href="@Url.Action("Questions", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationQuestions</a></td>
    <td><a href="@Url.Action("Metrics", "Evaluation", new { Id = ViewData["ProjectID"] })">@AcceptPortal.Resources.Global.EvaluationMetrics</a></td>  
    </tr>
    </table>
    <br />



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <table border="1">
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationAnswer:</b></td>
        <td width="200">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </td>
    </tr>
    <tr>
        <td width="200"><b>@AcceptPortal.Resources.Global.EvaluationAnswerValue:</b></td>
        <td width="200">
            @Html.EditorFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="@AcceptPortal.Resources.Global.EvaluationUpdate" /> | @Html.ActionLink(AcceptPortal.Resources.Global.EvaluationCancel, "Questions", new { id = ViewData["ProjectID"] })
        </td>
    </tr>
    
    </table>
    
}
