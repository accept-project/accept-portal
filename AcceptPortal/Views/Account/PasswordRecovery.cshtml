@model AcceptPortal.Models.RecoverPasswordModel

@{
    ViewBag.Title = @AcceptPortal.Resources.Global.Account_PasswordRecovery_Title;
    Layout = "~/Views/Shared/_PortalLoginLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<section>

    @using (Html.BeginForm("PasswordRecovery", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
    {
    
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, @AcceptPortal.Resources.Global.Account_PasswordRecovery_ValidationSummary)
        @(ViewBag.EmailSent != null ? ViewBag.EmailSent : string.Empty)

        <h2 class="form-signin-heading">
            <img alt="ACCEPT" src="@Url.Content("~/Content/images/accept_globe_transparent.png")" /></h2>
        if (ViewBag.EmailSent == null)
        {
        <input for="UserName" type="text" name="UserName" class="input-block-level" placeholder="@AcceptPortal.Resources.Global.Email">                                     
        <div style="margin-bottom: 15px;">@Html.ValidationMessageFor(m => m.UserName)</div>
        <button class="btn btn-large btn-block btn-primary" type="submit">@AcceptPortal.Resources.Global.Account_PasswordRecovery_RecoverButton</button>
        }
        <button onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-large btn-block" type="button" >@AcceptPortal.Resources.Global.BackToLoginPage</button>
    }
</section>
